<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://www.uniovi.es"
	xmlns="http://www.uniovi.es"
	elementFormDefault="qualified">
	<xs:import namespace="http://www.w3.org/XML/1998/namespace" />

	<xs:element name="circuito">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="nombre" />
				<xs:element ref="longitud" />
				<xs:element ref="anchuraMedia" />
				<xs:element ref="fechaCarrera" />
				<xs:element ref="horaInicio" />
				<xs:element ref="vueltas" />
				<xs:element ref="localidad" />
				<xs:element ref="pais" />
				<xs:element ref="patrocinador" />
				<xs:element ref="referencias" />
				<xs:element ref="galeriaFotos" />
				<xs:element ref="galeriaVideos" />
				<xs:element ref="puntoOrigen" />
				<xs:element ref="tramos" />
				<xs:element ref="vencedor" />
				<xs:element ref="clasificacionMundial" />
			</xs:sequence>
			<xs:attribute name="version" type="xs:string" />
			<xs:attribute ref="xml:lang" />
		</xs:complexType>
	</xs:element>

	<xs:element name="nombre" type="xs:string" />

	<xs:simpleType name="LongitudValue">
		<xs:restriction base="xs:integer">
			<xs:minInclusive value="3600" />
			<xs:maxInclusive value="6000" />
		</xs:restriction>
	</xs:simpleType>
	<xs:element name="longitud">
		<xs:complexType>
			<xs:simpleContent>
				<xs:extension base="LongitudValue">
					<xs:attribute name="unidad" type="xs:string" use="required" fixed="metros" />
				</xs:extension>
			</xs:simpleContent>
		</xs:complexType>
	</xs:element>

	<xs:simpleType name="AnchuraValue">
		<xs:restriction base="xs:integer">
			<xs:minInclusive value="5" />
			<xs:maxInclusive value="50" />
		</xs:restriction>
	</xs:simpleType>
	<xs:element name="anchuraMedia">
		<xs:complexType>
			<xs:simpleContent>
				<xs:extension base="AnchuraValue">
					<xs:attribute name="unidad" type="xs:string" use="required" fixed="metros" />
				</xs:extension>
			</xs:simpleContent>
		</xs:complexType>
	</xs:element>

	<xs:simpleType name="FechaCarreraValue">
		<xs:restriction base="xs:date">
			<xs:minInclusive value="2025-03-02" />
			<xs:maxInclusive value="2025-11-16" />
		</xs:restriction>
	</xs:simpleType>
	<xs:element name="fechaCarrera">
		<xs:complexType>
			<xs:simpleContent>
				<xs:extension base="FechaCarreraValue" />
			</xs:simpleContent>
		</xs:complexType>
	</xs:element>

	<xs:element name="horaInicio">
		<xs:complexType>
			<xs:simpleContent>
				<xs:extension base="xs:time">
				</xs:extension>
			</xs:simpleContent>
		</xs:complexType>
	</xs:element>

	<xs:element name="vueltas">
		<xs:simpleType>
			<xs:restriction base="xs:integer">
				<xs:minInclusive value="20" />
				<xs:maxInclusive value="30" />
			</xs:restriction>
		</xs:simpleType>
	</xs:element>

	<xs:element name="localidad" type="xs:string" />

	<xs:element name="pais" type="xs:string" />

	<xs:element name="patrocinador" type="xs:string" />

	<xs:element name="ref" type="xs:anyURI" />

	<xs:element name="referencias">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="ref" minOccurs="3" maxOccurs="unbounded" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="galeriaFotos">
		<xs:complexType>
			<xs:sequence>
				<xs:element maxOccurs="5" ref="foto" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="foto">
		<xs:complexType>
			<xs:attribute name="archivo" type="xs:string" use="required" />
			<xs:attribute name="titulo" type="xs:string" />
			<xs:attribute name="tipo">
				<xs:simpleType>
					<xs:restriction base="xs:NMTOKEN">
						<xs:enumeration value="jpg" />
						<xs:enumeration value="jpeg" />
						<xs:enumeration value="png" />
						<xs:enumeration value="gif" />
						<xs:enumeration value="webp" />
					</xs:restriction>
				</xs:simpleType>
			</xs:attribute>
		</xs:complexType>
	</xs:element>

	<xs:element name="galeriaVideos">
		<xs:complexType>
			<xs:sequence>
				<xs:element minOccurs="1" maxOccurs="3" ref="video" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="video">
		<xs:complexType>
			<xs:attribute name="archivo" type="xs:string" use="required" />
			<xs:attribute name="titulo" type="xs:string" />
			<xs:attribute name="tipo">
				<xs:simpleType>
					<xs:restriction base="xs:NMTOKEN">
						<xs:enumeration value="mp4" />
						<xs:enumeration value="mov" />
						<xs:enumeration value="mkv" />
						<xs:enumeration value="webm" />
					</xs:restriction>
				</xs:simpleType>
			</xs:attribute>
		</xs:complexType>
	</xs:element>

	<xs:element name="puntoOrigen">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="longitudGeo" />
				<xs:element ref="latitudGeo" />
				<xs:element ref="altitudMSNM" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="longitudGeo" type="xs:string" />

	<xs:element name="latitudGeo" type="xs:string" />

	<xs:simpleType name="AltitudValue">
		<xs:restriction base="xs:integer">
			<xs:minInclusive value="0" />
			<xs:maxInclusive value="2000" />
		</xs:restriction>
	</xs:simpleType>

	<xs:element name="altitudMSNM">
		<xs:complexType>
			<xs:simpleContent>
				<xs:extension base="AltitudValue">
					<xs:attribute name="unidad" use="required" fixed="metros" />
				</xs:extension>
			</xs:simpleContent>
		</xs:complexType>
	</xs:element>

	<xs:element name="tramos">
		<xs:complexType>
			<xs:sequence>
				<xs:element maxOccurs="unbounded" ref="tramo" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="tramo">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="distancia" />
				<xs:element ref="puntoFinal" />
				<xs:element ref="sector" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="distancia">
		<xs:complexType>
			<xs:simpleContent>
				<xs:extension base="xs:string">
					<xs:attribute name="unidad" use="required">
						<xs:simpleType>
							<xs:restriction base="xs:NMTOKEN">
								<xs:enumeration value="metros" />
							</xs:restriction>
						</xs:simpleType>
					</xs:attribute>
				</xs:extension>
			</xs:simpleContent>
		</xs:complexType>
	</xs:element>

	<xs:element name="puntoFinal">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="longitudGeo" />
				<xs:element ref="latitudGeo" />
				<xs:element ref="altitudMSNM" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="sector" type="xs:string" />

	<xs:element name="vencedor">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="piloto" />
				<xs:element ref="tiempoTotal" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="piloto" type="xs:string" />

	<xs:element name="tiempoTotal">
		<xs:complexType>
			<xs:simpleContent>
				<xs:extension base="xs:duration" />
			</xs:simpleContent>
		</xs:complexType>
	</xs:element>

	<xs:element name="clasificacionMundial">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="pos1" />
				<xs:element ref="pos2" />
				<xs:element ref="pos3" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="pos1">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="piloto" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="pos2">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="piloto" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="pos3">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="piloto" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

</xs:schema>